{
  "name": "vue3-vite-spa-template",
  "private": true,
  "version": "0.0.2",
  "scripts": {
    "Initial Installs": "npm install && husky install",
    "Run Local dev": "vite && tailwindcss -i ./src/styles/index.css -o ./src/styles/output.css --watch",
    "dev": "vite",
    "predeploy:ft": "npm run build",
    "deploy:ft": "npm run build && git push --tags",
    "postdeploy:ft": "gulp upload",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "uploadLibToClaudinary": "gulp upload",
    "versionUpdate": "gulp versionUpdate",
    "deleteLibFromClaudinary": "gulp deleteVersion",
    "getLatestLibraryVersion": "gulp getLatestVersion",
    "postversion": "npm run versionUpdate && git add . && git commit -m\"Version bump %npm_package_version%\" && git push",
    "format:check": "prettier --check ./src/",
    "format:fix": "prettier --write ./src/",
    "lint": "eslint --ext .jsx,.js,.ts,.tsx,.vue src/ --max-warnings=0",
    "lint:fix": "eslint --ext .jsx,.js,.ts,.tsx,.vue src/ --fix",
    "tailwindWatch": "tailwindcss -i ./src/styles/index.css -o ./src/styles/output.css --watch",
    "prepare": "husky install"
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@BookingOnline/vue3-vite-component-library-template": "0.0.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vueuse/core": "^8.2.0",
    "cloudinary": "^1.29.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "git-rev-sync": "^3.0.2",
    "gulp": "^4.0.2",
    "gulp-replace": "^1.1.3",
    "husky": "^7.0.4",
    "prettier": "2.6.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.6.6",
    "vite": "^2.8.0",
    "vite-plugin-externals": "^0.4.0",
    "vue-eslint-parser": "^8.3.0",
    "vue-i18n": "^9.1.9",
    "vue-tsc": "^0.29.8"
  }
}
